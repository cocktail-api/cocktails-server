<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="Simon Levermann">
        <comment>Create the initial database layout</comment>

        <createTable tableName="ingredient_type">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="ingredient_type_pk"/>
            </column>
        </createTable>

        <createTable tableName="ingredient_type_name">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="ingredient_type_name_pk"/>
            </column>
            <column name="ingredient_type_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="locale" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="string" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="ingredient_type_name" indexName="ingredient_type_name_idx">
            <column name="string"/>
        </createIndex>
        <addUniqueConstraint tableName="ingredient_type_name" columnNames="ingredient_type_id, locale"
                             constraintName="unique_ingredient_type_name_id_locale"/>
        <addForeignKeyConstraint baseTableName="ingredient_type_name" baseColumnNames="ingredient_type_id"
                                 constraintName="ingredient_type_name_fk"
                                 referencedTableName="ingredient_type"
                                 referencedColumnNames="id" onDelete="CASCADE"/>

        <createTable tableName="ingredient">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="ingredient_pk"/>
            </column>
            <column name="type_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="ingredient" baseColumnNames="type_id"
                                 constraintName="ingredient_type_fk"
                                 referencedTableName="ingredient_type"
                                 referencedColumnNames="id" onDelete="RESTRICT"/>

        <createTable tableName="ingredient_name">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="ingredient_name_pk"/>
            </column>
            <column name="ingredient_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="locale" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="string" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="ingredient_name" indexName="ingredient_name_idx">
            <column name="string"/>
        </createIndex>
        <addUniqueConstraint tableName="ingredient_name" columnNames="ingredient_id, locale"
                             constraintName="unique_ingredient_name_id_locale"/>
        <addForeignKeyConstraint baseTableName="ingredient_name" baseColumnNames="ingredient_id"
                                 constraintName="ingredient_name_fk"
                                 referencedTableName="ingredient"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <createTable tableName="ingredient_description">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="ingredient_description_pk"/>
            </column>
            <column name="ingredient_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="locale" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="string" type="clob">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="ingredient_description" indexName="ingredient_description_idx">
            <column name="string"/>
        </createIndex>
        <addUniqueConstraint tableName="ingredient_description" columnNames="ingredient_id, locale"
                             constraintName="unique_ingredient_description_id_locale"/>
        <addForeignKeyConstraint baseTableName="ingredient_description" baseColumnNames="ingredient_id"
                                 constraintName="ingredient_description_fk"
                                 referencedTableName="ingredient"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <createTable tableName="ingredient_tag">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="ingredient_tag_pk"/>
            </column>
        </createTable>

        <createTable tableName="ingredient_tag_name">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="ingredient_tag_name_pk"/>
            </column>
            <column name="tag_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="locale" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="string" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="ingredient_tag_name" indexName="ingredient_tag_name_idx">
            <column name="string"/>
        </createIndex>
        <addUniqueConstraint columnNames="tag_id, locale" tableName="ingredient_tag_name"
                             constraintName="unique_ingredient_tag_name_id_locale"/>
        <addForeignKeyConstraint baseTableName="ingredient_tag_name" baseColumnNames="tag_id"
                                 constraintName="ingredient_tag_name_fk"
                                 referencedTableName="ingredient_tag"
                                 referencedColumnNames="id" onDelete="CASCADE"/>

        <createTable tableName="join_ingredient_tag">
            <column name="ingredient_tag_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="ingredient_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="join_ingredient_tag" columnNames="ingredient_tag_id, ingredient_id"
                       constraintName="join_ingredient_tag_pk"/>
        <addForeignKeyConstraint baseTableName="join_ingredient_tag" baseColumnNames="ingredient_tag_id"
                                 constraintName="join_ingredient_tag_tag_fk"
                                 referencedTableName="ingredient_tag"
                                 referencedColumnNames="id" onDelete="RESTRICT"/>
        <addForeignKeyConstraint baseTableName="join_ingredient_tag" baseColumnNames="ingredient_id"
                                 constraintName="join_ingredient_tag_ingredient_fk"
                                 referencedTableName="ingredient"
                                 referencedColumnNames="id" onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>
