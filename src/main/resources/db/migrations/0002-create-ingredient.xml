<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="2" author="Simon Levermann">
        <comment>Create Tables and Indexes related to ingredients</comment>
        <createTable tableName="ingredient_type">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="ingredient_type_pk"/>
            </column>
        </createTable>

        <createTable tableName="ingredient_type_name">
            <column name="ingredient_type_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="language_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="ingredient_type_name" baseColumnNames="ingredient_type_id"
                                 constraintName="ingredient_type_name_type_fk"
                                 referencedTableName="ingredient_type"
                                 referencedColumnNames="id" onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="ingredient_type_name" baseColumnNames="language_id"
                                 constraintName="ingredient_type_name_language_fk"
                                 referencedTableName="language"
                                 referencedColumnNames="id" onDelete="RESTRICT"/>
        <addPrimaryKey tableName="ingredient_type_name" columnNames="ingredient_type_id, language_id"
                       constraintName="ingredient_type_name_pk"/>

        <createTable tableName="ingredient">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="ingredient_pk"/>
            </column>
            <column name="ingredient_type_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="ingredient" baseColumnNames="ingredient_type_id"
                                 constraintName="ingredient_type_fk"
                                 referencedTableName="ingredient_type"
                                 referencedColumnNames="id" onDelete="RESTRICT"/>

        <createTable tableName="ingredient_data">
            <column name="ingredient_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="language_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="clob">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="ingredient_data" columnNames="ingredient_id, language_id"
                       constraintName="ingredient_data_pk"/>
        <createIndex tableName="ingredient_data" indexName="ingredient_name_index">
            <column name="name"/>
        </createIndex>
        <createIndex tableName="ingredient_data" indexName="ingredient_description_index">
            <column name="description"/>
        </createIndex>
        <addForeignKeyConstraint baseTableName="ingredient_data" baseColumnNames="ingredient_id"
                                 constraintName="ingredient_data_ingredient_fk"
                                 referencedTableName="ingredient"
                                 referencedColumnNames="id" onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="ingredient_data" baseColumnNames="language_id"
                                 constraintName="ingredient_data_language_fk"
                                 referencedTableName="language"
                                 referencedColumnNames="id" onDelete="RESTRICT"/>

        <sqlFile path="initData/ingredients.sql" relativeToChangelogFile="true"/>
    </changeSet>
</databaseChangeLog>
